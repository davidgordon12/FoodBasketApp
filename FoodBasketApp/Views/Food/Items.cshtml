@using FoodBasketApp.Entities
@model ItemViewModel

<div class="container">
    <div class="row">
        <div class="col-sm">
            <div>
                <ul class="nav nav-tabs">
                    <li class="nav-item">
                        <a class="nav-link" asp-action="Items" asp-route-category="All">All</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="Items" asp-route-category="Fruit">Fruit</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="Items" asp-route-category="Vegetable">Vegetable</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="Items" asp-route-category="Meat">Meat</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="Items" asp-route-category="Fish">Fish</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="Items" asp-route-category="Poultry">Poultry</a>
                    </li>
                </ul>
            </div>
            <div>
                <ul>
                    <h3>Food Items</h3>
                    @foreach (FoodItem fi in Model.Items)
                    {
                        <li>@fi.Name</li>
                    }
                </ul>
            </div>
        </div>
        <div class="col-sm">
            <form asp-action="CreateItem">
                <input type="text" class="form-control mb-3" asp-for="@Model.Item.Name" />
                <select class="form-control mt-3" asp-for="@Model.Item.Category" asp-items="@(new SelectList(FoodBasketApp.Services.FoodService.FoodCategories))">
                </select>
                <button type="submit" class="form-control bg-primary h-25 w-25 mt-3 text-white">Submit</button>
            </form>
        </div>
    </div>
</div>

